<div class="container">
    <p></p>
    <h1><%= @category_name %></h1>
    <h4><%= @dates_period %></h3>
</div>

<div class="container">
    <div class="row">
        <div class="my-custom-scrollbar my-custom-scrollbar-primary col-4">
            <table class="table table-striped tableFixHead">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Date</th>
                        <th scope="col">Amount</th>
                    </tr>
                </thead>
                <tbody>
                    <% for i in (0...@dates.length) do %>
                        <tr>
                            <th scope="row"><%= i + 1 %></th>
                            <td><%= @dates[i] %></td>
                            <td><%= @amounts_per_dates[i] %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <div class="col">
            <%= render "chart_by_dates" %>
        </div>
    </div>
</div>


