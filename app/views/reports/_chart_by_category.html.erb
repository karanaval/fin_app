<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<canvas id="myChart" width="400" height="400"></canvas>

<script>

    const ctx = document.getElementById('myChart').getContext('2d');

    const data = {
        labels: <%= raw @categories_names %>,
        datasets: [{
            label: 'Spent',
            data: <%= @amounts_per_categories %>,
            backgroundColor: [
            'rgb(220,20,60)',
            'rgb(138,43,226)',
            'rgb(255,140,0)',
            'rgb(100,149,237)',
            'rgb(255,215,0)',
            'rgb(30,144,255)',
            'rgb(128,128,0)',
            'rgb(255,99,71)',
            'rgb(106,90,205)',
            'rgb(255,160,122)',
            'rgb(100,149,237)',
            'rgb(255,255,0)',
            'rgb(160,82,45)',
            'rgb(30,144,255)',
            'rgb(34,139,34)'
            ],
            hoverOffset: 4
        }]
    };

    const config = {
        type: 'doughnut',
        data: data,
        };

    const myChart = new Chart(ctx, config);

</script>
