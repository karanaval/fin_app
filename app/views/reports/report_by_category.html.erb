<h1><%= @category_name %></h1>
<h4><%= @dates_period %></h3>

<div class="container">
    <div class="row">
        <div class="col">
            <table class="table table-striped" style="width:300px">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Category name</th>
                        <th scope="col">Amount</th>
                    </tr>
                </thead>
                <tbody>
                    <% for i in (0...@categories_names.length) do %>
                        <tr>
                            <th scope="row"><%= i + 1 %></th>
                            <td><%= @categories_names[i] %></td>
                            <td><%= @amounts_per_categories[i] %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <div class="col">
            <%= render "chart_by_category" %>
        </div>
    </div>
</div>
